<form id="form" class="simple-example" action="javascript:void(0);" novalidate>
    <div class="modal-body">
        <div id="alert"></div>
        <div class="form-row">
            <div class="col-md-5 mb-4">
                <%- form.input_date('date as tanggal', '*') %>
            </div>
            <div class="col-md-3 mb-4">
                <%- form.input_date('time_in as waktu_masuk', '*') %>
            </div>
            <div class="col-md-3 mb-4">
                <%- form.input_date('time_out as waktu_keluar', '*') %>
            </div>
            <div class="col-md-12 mb-4">
                <%- form.input('event as kegiatan', '*') %>
            </div>
            <div class="col-md-12 mb-4">
                <%- form.textarea('notes as catatan', '*', '', 5) %>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <%- form.cancel() %>
        <%- form.submit() %>
    </div>
</form>

