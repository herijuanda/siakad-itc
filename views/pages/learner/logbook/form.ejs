    flatpickr(document.getElementById('input_date'), {
        dateFormat: "d-m-Y",
    });

    flatpickr(document.getElementById('input_time_in'), {
        enableTime: true,
        noCalendar: true,
        dateFormat: "H:i",
        defaultDate: "08:30"
    });

    flatpickr(document.getElementById('input_time_out'), {
        enableTime: true,
        noCalendar: true,
        dateFormat: "H:i",
        defaultDate: "16:30"
    });

    feather.replace();
</script>