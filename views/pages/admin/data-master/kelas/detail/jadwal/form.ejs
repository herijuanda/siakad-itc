<form id="form" class="simple-example" action="javascript:void(0);" novalidate>
    <%- form.input_hide('id', data?.id) %>
    <%- form.input_hide('classroom_id', classroom_id) %>
    <div class="modal-body">
        <div id="alert"></div>
        <div class="form-row">
            <div class="col-md-6 mb-4">
                <%- form.input('room as ruangan', '*', data?.room) %>
            </div>
            <div class="col-md-6 mb-4">
                <%- form.select('day_id as hari', '*', day) %>
            </div>
            <div class="col-md-6 mb-4">
                <%- form.input_date('time_first as jadwal_mulai', '*', data?.time_first ? moment.utc(data?.time_first).format('H:i') : null) %>
            </div>
            <div class="col-md-6 mb-4">
                <%- form.input_date('time_last as jadwal_berakhir', '*',data?.time_last ? moment.utc(data?.time_last).format('H:i') : null) %>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <%- form.cancel() %>
        <%- form.submit(data?.id ? 'Perbarui' : undefined) %>
    </div>
</form>

