    });

    flatpickr(document.getElementById('input_time_last'), {
        enableTime: true,
        noCalendar: true,
        dateFormat: "H:i",
        defaultDate: "10:30",
        time_24hr: true,
        // minTime: "08:00",
        // maxTime: "18:00"
    });

    $(".select").select2({
        allowClear: true,
        tags: true,
        dropdownParent: $('#modal'),
    });

    feather.replace();
</script>