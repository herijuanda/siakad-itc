<!DOCTYPE html>
<html lang="{{ str_replace('_', '-', app()->getLocale()) }}">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, shrink-to-fit=no">

    <!-- CSRF Token -->
    <meta name="csrf-token" content="{{ csrf_token() }}">

    <title>SIAKAD ITC | Login</title>
    <link rel="icon" type="image/png/x-icon" href="assets/images/logomaun.png">
    
    <!-- BEGIN GLOBAL MANDATORY STYLES -->
    <link href="https://fonts.googleapis.com/css?family=Quicksand:400,500,600,700&display=swap" rel="stylesheet">
    <link href="<%= base_url %>/bootstrap/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="<%= base_url %>/assets/css/plugins.css" rel="stylesheet" type="text/css" />
    <link href="<%= base_url %>/assets/css/custom.css" rel="stylesheet" type="text/css" />
    <link href="<%= base_url %>/assets/css/authentication/form-2.css" rel="stylesheet" type="text/css" />
    <!-- END GLOBAL MANDATORY STYLES -->
    
    <link rel="stylesheet" type="text/css" href="<%= base_url %>/assets/css/forms/switches.css">
    <script src="<%= base_url %>/assets/js/sweetalert.min.js"></script>

    <% if(view === 'register'){ %>
        <link href="<%= base_url %>/assets/css/authentication/register.css" rel="stylesheet" type="text/css" />
        <link rel="stylesheet" type="text/css" href="<%= base_url %>/plugins/select2/select2.min.css">
        <link href="<%= base_url %>/plugins/flatpickr/flatpickr.css" rel="stylesheet" type="text/css">
        <link href="<%= base_url %>/plugins/flatpickr/custom-flatpickr.css" rel="stylesheet" type="text/css">
    <% } %>
    
</head>
<body class="form">
    
    <%- include('../pages/auth/'+view); %>
    
    <!-- BEGIN GLOBAL MANDATORY SCRIPTS -->
    <script src="<%= base_url %>/assets/js/libs/jquery-3.1.1.min.js"></script>
    <script src="<%= base_url %>/bootstrap/js/popper.min.js"></script>
    <script src="<%= base_url %>/bootstrap/js/bootstrap.min.js"></script>
    
    <!-- END GLOBAL MANDATORY SCRIPTS -->
    <script src="<%= base_url %>/assets/js/authentication/form-2.js"></script>

    <% if(view === 'register'){ %>
        <script src="<%= base_url %>/plugins/select2/select2.min.js"></script>
        <script src="<%= base_url %>/plugins/flatpickr/flatpickr.js"></script>
        <!-- <script src="<%= base_url %>/plugins/flatpickr/custom-flatpickr.js"></script> -->
        <script>
            $(".select").select2();
            flatpickr(document.getElementById('input_date_of_birth'),{
                // enableTime: true,
                dateFormat: "d-m-Y",
            });
        </script>
    <% } %>

    
</body>
</html>